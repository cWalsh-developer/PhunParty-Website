        },
        {
          "type": "tool_use",
          "name": "prepareToolInvocation",
          "input": {
            "kind": "prepareToolInvocation",
            "toolName": "copilot_applyPatch"
          }
        },
        {
          "type": "tool_use",
          "name": "copilot_applyPatch",
